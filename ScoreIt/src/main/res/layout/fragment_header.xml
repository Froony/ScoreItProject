<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/row_names"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player1"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="fonts/Roboto-Bold.ttf"
            android:onClick="editName"/>

        <TextView
            android:id="@+id/player2"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="fonts/Roboto-Bold.ttf"
            android:onClick="editName"/>

        <TextView
            android:id="@+id/player3"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="fonts/Roboto-Bold.ttf"
            android:onClick="editName"/>

        <TextView
            android:id="@+id/player4"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="fonts/Roboto-Bold.ttf"
            android:onClick="editName"/>

        <TextView
            android:id="@+id/player5"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="fonts/Roboto-Bold.ttf"
            android:onClick="editName"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_scores"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height"
        android:layout_alignParentStart="true"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/score_player1"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="fonts/Roboto-Bold.ttf"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/score_player2"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="fonts/Roboto-Bold.ttf"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/score_player3"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="fonts/Roboto-Bold.ttf"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/score_player4"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="fonts/Roboto-Bold.ttf"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/score_player5"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="fonts/Roboto-Bold.ttf"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>